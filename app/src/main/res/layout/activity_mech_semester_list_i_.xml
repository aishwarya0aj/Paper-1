<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.hrishikesh.paper.I_Scheme.MechSemesterList_i_Activity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Select Semester"
                android:textColor="#000"
                android:textSize="25dp"
                android:textAlignment="center"
                android:textStyle="bold"/>

            <LinearLayout
                android:layout_width="250dp"
                android:layout_height="1dp"
                android:background="#838383"
                android:gravity="center_vertical"
                android:layout_marginBottom="10dp"
                android:layout_gravity="center"></LinearLayout>

            <android.support.v7.widget.CardView
                android:id="@+id/comp_sem1"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:padding="15dp"
                app:cardCornerRadius="4dp"
                app:cardElevation="8dp"
                android:layout_margin="15dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Semester 1"
                    android:textSize="20dp"
                    android:gravity="center"
                    android:textColor="#000"
                    android:textAlignment="center"/>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:id="@+id/comp_sem2"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:padding="15dp"
                app:cardCornerRadius="4dp"
                app:cardElevation="8dp"
                android:layout_margin="15dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Semester 2"
                    android:textSize="20dp"
                    android:gravity="center"
                    android:textColor="#000"
                    android:textAlignment="center"/>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:id="@+id/comp_sem3"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:padding="15dp"
                app:cardCornerRadius="4dp"
                app:cardElevation="8dp"
                android:layout_margin="15dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Semester 3"
                    android:textSize="20dp"
                    android:gravity="center"
                    android:textColor="#000"
                    android:textAlignment="center"/>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:id="@+id/comp_sem4"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:padding="15dp"
                app:cardCornerRadius="4dp"
                app:cardElevation="8dp"
                android:layout_margin="15dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Semester 4"
                    android:textSize="20dp"
                    android:gravity="center"
                    android:textColor="#000"
                    android:textAlignment="center"/>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:id="@+id/comp_sem5"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:padding="15dp"
                app:cardCornerRadius="4dp"
                app:cardElevation="8dp"
                android:layout_margin="15dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Semester 5"
                    android:textSize="20dp"
                    android:gravity="center"
                    android:textColor="#000"
                    android:textAlignment="center"/>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:id="@+id/comp_sem6"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:padding="15dp"
                app:cardCornerRadius="4dp"
                app:cardElevation="8dp"
                android:layout_margin="15dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Semester 6"
                    android:textSize="20dp"
                    android:gravity="center"
                    android:textColor="#000"
                    android:textAlignment="center"/>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>
